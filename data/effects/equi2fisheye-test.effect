uniform float4x4 ViewProj;

struct VertIn {
	float4 pos : POSITION;
	float2 uv  : TEXCOORD0;
};

struct VertOut {
	float4 pos : POSITION;
	float2 uv  : TEXCOORD0;
};

VertOut VSDefault(VertIn v)
{
	VertOut o;
	o.pos = mul(float4(v.pos.xyz, 1.0), ViewProj);
	o.uv = v.uv;
	return o;
}

float4 PSMain(VertOut i) : TARGET
{
	// Simple test - return a solid color to verify the plugin works
	return float4(1.0, 0.0, 0.0, 1.0); // Red
}

technique Draw {
	pass {
		vertex_shader = VSDefault(v_in);
		pixel_shader  = PSMain(v_in);
	}
}
